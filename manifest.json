{
  "manifest_version": 2,
  "name": "Move Tabs",
  "version": "0.1",

  "description": "Very simple tab moving shortcut extension",

  "background": {
    "persistent": false,
    "scripts": ["src/background.js"]
  },
  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Ctrl+Shift+PageUp",
        "mac": "Command+Shift+Left"
      },
      "description": "Move tab left"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Ctrl+Shift+PageDown",
        "mac": "Command+Shift+Right"
      },
      "description": "Move tab right"
    }
  }
}
